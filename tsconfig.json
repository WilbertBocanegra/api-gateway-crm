{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "baseUrl": ".",
    "paths": {
      "@schema/*": ["./src/schema/*"],
      "@schema": ["./src/schema/index.ts"],
      "@query": ["./src/query/index.ts"],
      "@mutation": ["./src/mutation/index.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
